---
const script = `
import { geoAlbersUsa, geoPath } from 'd3-geo';
import { feature } from 'topojson-client';

const el = document.currentScript.parentElement;
const svg = el.querySelector('svg');
const g = svg.querySelector('g');

async function load() {
  const topo = await fetch('/topo/states-10m.json').then(r=>r.json());
  const states = feature(topo, topo.objects.states).features;

  const width = svg.clientWidth, height = 520;
  svg.setAttribute('viewBox', \`0 0 \${width} \${height}\`);
  const projection = geoAlbersUsa().translate([width/2, height/2]).scale(1000);
  const path = geoPath(projection);

  for (const f of states) {
    const p = document.createElementNS('http://www.w3.org/2000/svg','path');
    p.setAttribute('d', path(f));
    p.setAttribute('fill', '#0c121a');
    p.setAttribute('stroke', '#1f2a37');
    p.setAttribute('data-code', f.id);
    p.addEventListener('click', () => {
      const code = id2abbr[String(f.id)] || 'CA';
      window.location.href = '/state/' + code;
    });
    p.addEventListener('mouseenter', ()=>p.setAttribute('fill','#111a24'));
    p.addEventListener('mouseleave', ()=>p.setAttribute('fill','#0c121a'));
    g.appendChild(p);
  }
}
const id2abbr={"01":"AL","02":"AK","04":"AZ","05":"AR","06":"CA","08":"CO","09":"CT","10":"DE","11":"DC","12":"FL","13":"GA","15":"HI","16":"ID","17":"IL","18":"IN","19":"IA","20":"KS","21":"KY","22":"LA","23":"ME","24":"MD","25":"MA","26":"MI","27":"MN","28":"MS","29":"MO","30":"MT","31":"NE","32":"NV","33":"NH","34":"NJ","35":"NM","36":"NY","37":"NC","38":"ND","39":"OH","40":"OK","41":"OR","42":"PA","44":"RI","45":"SC","46":"SD","47":"TN","48":"TX","49":"UT","50":"VT","51":"VA","53":"WA","54":"WV","55":"WI","56":"WY"};
load();
`;
---

<div class="panel">
  <div class="label"><strong>US Map</strong><span>Click a state</span></div>
  <svg width="100%" height="520" role="img" aria-label="Map of the United States"><g></g></svg>
  <script type="module">{script}</script>
</div>
